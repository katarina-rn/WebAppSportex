<%- include("header");-%>
<section id="categories">
  <div class="container-fluid">
    <h1><%=categoryTitle%></h1>
    <div class="row">
      <%products.forEach((product)=>{%>
      <div class="col-lg-3 col-md-6">
        <div class="card">
          <div class="productImageTop">
            <img src="<%=product.imgUrl%>" alt="<%=product.imgUrl%>">
          </div>
          <div class="card-body">
            <h5 class="card-title" style="text-align:left;"><%=product.name%></h5>
            <p class="card-text">Brand: <%=product.brand%></p>
            <p class="card-text">Cena: <%=product.price%> din.</p>
            <p class="card-text">Cena sa PDV-om: <%=product.pricePDV%> din.</p>
            <form class="addItemForm" action="/order" method="post">
              <%if(user !== null && user !== undefined){%>
              <input type="hidden" name="customerId" value="<%=user._id%>">
              <%}%>
              <input type="hidden" name="productId" value="<%=product._id%>">
              <input type="hidden" name="name" value="<%=product.name%>">
              <input type="hidden" name="category" value="<%=product.category%>">
              <input type="hidden" name="price" value="<%=product.pricePDV%>">
              <input type="text" name="value" value="" class="quantity">
              <button type="submit" value="submit">+</button>
            </form>
          </div>
        </div>
      </div>
      <%})%>
    </div>
  </div>
</section>
<%- include("footer")-%>
